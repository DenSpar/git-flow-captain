{
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "import",
        "@typescript-eslint",
        "prettier"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended",
        "plugin:import/typescript",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "rules": {
        // "linebreak-style": [
        //     "error",
        //     "unix"
        // ],
        // "quotes": [
        //     "error",
        //     "single"
        // ],
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "parser": "typescript",
                "maxLineLength": 120,
                "printWidth": 120,
                "endOfLine": "auto"
            }
        ]
    }
}