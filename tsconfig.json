{
    "compilerOptions": {
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "outDir": "./dist",
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
        ],
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitOverride": false,
        "noPropertyAccessFromIndexSignature": false,
        "paths": {
            "@crew/*": [
                "./src/crew/*"
            ],
            "@tasks/*": [
                "./src/tasks/*"
            ],
            "@configs/*": [
                "./src/configs/*"
            ],
            "@logger": [
                "./src/logger"
            ]
        }
    }
}